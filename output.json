{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Transform": "AWS::Serverless-2016-10-31",
    "Description": "helloworld\nSample SAM Template for helloworld\n",
    "Parameters": {
        "EnvName": {
            "Type": "String",
            "Default": "dev",
            "Description": "Selecciona el nombre ambiente que quieres desplegar"
        },
        "DBEnvName": {
            "Type": "String",
            "Default": "dev",
            "Description": "Valor de sufijo para tablas de base de datos"
        },
        "ParametersKMSARN": {
            "Description": "ARN de la llave que descifra los secretos",
            "Type": "String"
        }
    },
    "Globals": {
        "Function": {
            "Timeout": 3
        }
    },
    "Resources": {
        "ApiGatewayApi": {
            "Type": "AWS::Serverless::Api",
            "Properties": {
                "StageName": {
                    "Ref": "EnvName"
                },
                "Name": "ejemplo-apigateway"
            }
        },
        "HelloWorldFunction": {
            "Type": "AWS::Serverless::Function",
            "Properties": {
                "FunctionName2": {
                    "Fn::Sub": "ejemplo-lambda-${EnvName}"
                },
                "CodeUri": "hello_world/",
                "Handler": "app.lambda_handler",
                "Runtime": "python3.8",
                "Architectures": [
                    "x86_64"
                ],
                "Events": {
                    "HelloWorld": {
                        "Type": "Api",
                        "Properties": {
                            "RestApiId": {
                                "Ref": "ApiGatewayApi"
                            },
                            "Path": "/hello",
                            "Method": "get"
                        }
                    }
                },
                "Environment": {
                    "Variables": {
                        "TABLA_EJEMPLO": {
                            "Fn::Sub": "ejemplo-tabla-ejemplo-${DBEnvName}"
                        }
                    }
                },
                "Policies": [
                    "AmazonS3ReadOnlyAccess",
                    {
                        "SSMParameterReadPolicy": {
                            "ParameterName": {
                                "Fn::Sub": "sia-utileria-parametro-${EnvName}"
                            }
                        }
                    },
                    {
                        "DynamoDBCrudPolicy": {
                            "TableName": {
                                "Fn::Sub": "sia-catalogo-ejemplo-${DBEnvName}"
                            }
                        }
                    },
                    {
                        "Statement": [
                            {
                                "Sid": "KMSDescifrar",
                                "Effect": "Allow",
                                "Action": [
                                    "kms:Decrypt"
                                ],
                                "Resource": {
                                    "Ref": "ParametersKMSARN"
                                }
                            }
                        ]
                    },
                    {
                        "Statement": [
                            {
                                "Sid": "KMSCifrar",
                                "Effect": "Allow",
                                "Action": [
                                    "kms:Encrypt"
                                ],
                                "Resource": {
                                    "Ref": "ParametersKMSARN"
                                }
                            }
                        ]
                    }
                ]
            }
        }
    }
}